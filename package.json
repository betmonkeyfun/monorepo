{
  "name": "betmonkey",
  "version": "1.0.0",
  "private": true,
  "description": "BetMonkey - Decentralized betting platform on Solana with x402 payment protocol",
  "workspaces": [
    "server",
    "frontend"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev:server & npm run dev:frontend & wait",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "fmt": "npm run fmt --workspaces --if-present",
    "fmt:check": "npm run fmt:check --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "dev:server": "npm run dev --workspace=server",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build:server": "npm run build --workspace=server",
    "build:frontend": "npm run build --workspace=frontend"
  },
  "keywords": [
    "solana",
    "betting",
    "x402",
    "payment",
    "protocol",
    "blockchain",
    "typescript",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/betmonkey"
  }
}
